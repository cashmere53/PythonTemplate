{
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "source.fixAll": true
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": [],
    "black-formatter.importStrategy": "fromEnvironment",
    "black-formatter.interpreter": ["${workspaceFolder}/.venv/Scripts/python"],
    "black-formatter.path": ["${workspaceFolder}/.venv/Scripts/black"],
    "ruff.format.args": [],
    "ruff.importStrategy": "fromEnvironment",
    "ruff.interpreter": ["${workspaceFolder}/.venv/Scripts/python"],
    "ruff.path": ["${workspaceFolder}/.venv/Scripts/ruff"],
    "mypy-type-checker.args": [],
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/Scripts/python"],
    "mypy-type-checker.path": ["${workspaceFolder}/.venv/Scripts/mypy"],
}
